# Railway Environment Variables
# Copy this file to .env for local development

# Database Configuration (Railway PostgreSQL)
PGDATABASE=railway
PGUSER=postgres
PGPASSWORD=your_postgres_password
PGHOST=your_postgres_host
PGPORT=5432

# Label Studio Configuration
LABEL_STUDIO_HOST=0.0.0.0
PORT=8080
DEBUG=false
SECRET_KEY=your-very-secure-secret-key-here

# Label Studio Admin User
LABEL_STUDIO_USERNAME=admin
LABEL_STUDIO_PASSWORD=admin123

# Data Directories
LABEL_STUDIO_BASE_DATA_DIR=/label-studio/data
LABEL_STUDIO_MEDIA_ROOT=/label-studio/media

# Performance Settings
WEB_CONCURRENCY=2
WORKER_CONNECTIONS=1000
MAX_WORKER_CONNECTIONS=2000

# Security Settings (for production)
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Django Settings
DJANGO_SETTINGS_MODULE=label_studio_config
DISABLE_SIGNUP_WITHOUT_LINK=true